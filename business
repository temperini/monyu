    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- L√≥gica do Menu Mobile ---
            const menuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // --- L√≥gica de Navega√ß√£o Suave ---
            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                    // Esconder menu mobile ap√≥s clique
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                });
            });

            // --- Configura√ß√£o Global dos Gr√°ficos ---
            Chart.defaults.font.family = 'Inter, sans-serif';
            Chart.defaults.plugins.tooltip.backgroundColor = '#1f2937'; // bg-gray-800
            Chart.defaults.plugins.tooltip.titleFont.size = 14;
            Chart.defaults.plugins.tooltip.bodyFont.size = 12;
            Chart.defaults.plugins.tooltip.padding = 10;
            Chart.defaults.plugins.tooltip.cornerRadius = 4;
            Chart.defaults.plugins.legend.position = 'bottom';

            // --- Gr√°fico 1: O Problema (Bar Chart) ---
            const problemaCtx = document.getElementById('problemaChart');
            if (problemaCtx) {
                new Chart(problemaCtx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: ['Invest. Privado (VC) 2023', 'Invest. P√∫blico (Fomento) 2023'],
                        datasets: [{
                            label: 'Varia√ß√£o Ano Anterior',
                            data: [-86, 72],
                            backgroundColor: [
                                'rgba(239, 68, 68, 0.7)', // red-500
                                'rgba(34, 197, 94, 0.7)'  // green-500
                            ],
                            borderColor: [
                                'rgba(239, 68, 68, 1)',
                                'rgba(34, 197, 94, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        indexAxis: 'y',
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: (context) => `${context.label}: ${context.raw}%`
                                }
                            }
                        },
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Varia√ß√£o (%)'
                                }
                            }
                        }
                    }
                });
            }

            // --- Gr√°fico 2: R√©gua de Success Fee (Line Chart) ---
            const successFeeCtx = document.getElementById('successFeeChart');
            if (successFeeCtx) {
                new Chart(successFeeCtx.getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: ['R$ 100k', 'R$ 300k', 'R$ 600k', 'R$ 1M', 'R$ 1.5M', 'R$ 3M'],
                        datasets: [{
                            label: 'Percentual de Sucesso (%)',
                            data: [15, 13.5, 12, 10, 7.5, 3],
                            fill: false,
                            borderColor: '#E6007A', // MonyU Pink
                            tension: 0.1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: (context) => `Taxa: ${context.raw}%`
                                }
                            }
                        },
                        scales: {
                            y: {
                                title: {
                                    display: true,
                                    text: 'Taxa de Sucesso (%)'
                                }
                            },
                            x: {
                                title: {
                                    display: true,
                                    text: 'Valor Captado'
                                }
                            }
                        }
                    }
                });
            }

            // O gr√°fico do Pipeline foi removido pois os dados mudaram para um √∫nico valor (+R$ 30M),
            // que foi incorporado diretamente nos cards da se√ß√£o "Resultados".

        });
    </script>
